<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- 圆角弧度对应的半径 -->
    <corners android:radius="10dp" />

    <!-- 矩形中内容距离四个边框的距离 -->
    <padding
        android:bottom="10dp"
        android:left="10dp"
        android:right="10dp"
        android:top="10dp" />

    <!--  矩形的背景颜色 -->
    <solid android:color="#5b9ff7" />
    <!-- 边框的颜色 -->
    <stroke
        android:width="1dp"
        android:color="#e3edd4" />
</shape>