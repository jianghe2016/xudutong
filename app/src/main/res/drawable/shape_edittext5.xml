<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 圆角弧度对应的半径 -->
    <corners android:radius="25dp" />

    <!-- 矩形中内容距离四个边框的距离 -->
    <padding
        android:bottom="2dp"
        android:left="10dp"
        android:right="10dp"
        android:top="2dp" />

    <!--  矩形的背景颜色 -->
    <solid android:color="@color/whitecolortext" />
    <!-- 边框的颜色 -->
    <stroke
        android:width="1dp"
        android:color="#c5c5c5" />

</shape>