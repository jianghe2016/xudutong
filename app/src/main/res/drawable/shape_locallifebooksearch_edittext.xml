<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 圆角弧度对应的半径 -->
    <corners android:radius="2dp" />

    <!-- 矩形中内容距离四个边框的距离 -->
    <padding
        android:bottom="2dp"
        android:left="2dp"
        android:right="2dp"
        android:top="2dp" />

    <!--  矩形的背景颜色 -->
    <solid android:color="#f5f5f9" />
    <!-- 边框的颜色 -->
    <stroke
        android:width="0.5dp"
        android:color="#cccccc" />

</shape>