    <!-- 圆角弧度对应的半径 -->
    <corners
        android:topLeftRadius="0dp"
        android:topRightRadius="0dp"
        android:bottomLeftRadius="5dp"
        android:bottomRightRadius="5dp"
        />

    <!-- 矩形中内容距离四个边框的距离 -->


    <!--  矩形的背景颜色 -->
    <solid
        android:color="@color/whitecolortext" />
    <!-- 边框的颜色 -->
    <stroke
        android:width="1dp"
        android:color="@color/main_bianmin"
        />

</shape>