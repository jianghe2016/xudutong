<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval">

    <!-- 圆角弧度对应的半径 -->
    <size
        android:width="20dp"
        android:height="20dp" />
    <!-- 矩形中内容距离四个边框的距离 -->
    <!--  矩形的背景颜色 -->
    <solid android:color="#2a7eda" />
    <!-- 边框的颜色 -->
    <stroke
        android:width="1dp"
        android:color="#2a7eda" />

</shape>