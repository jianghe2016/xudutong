<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/whitecolortext">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@color/locallife_headviewtext">

            <LinearLayout
                android:id="@+id/xdt_guashiback"
                android:layout_width="70dp"
                android:layout_height="match_parent">

                <ImageView
                    style="@style/BACK_JIANTOU"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/home_weatherback" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="返回"
                    android:textColor="@color/whitecolortext"
                    android:textSize="17sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/home_cardgroup_button622headtop"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/backlinearklayoutwithmarinleft"
                android:gravity="center"
                android:text="挂失"
                android:textColor="@color/whitecolortext"
                android:textSize="@dimen/headviewtextsize" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="15dp"
            android:id="@+id/xdt_guashirecycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <Button
            android:id="@+id/xdt_guashi"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginTop="40dp"
            android:background="#2673d7"
            android:text="挂失"
            android:textColor="@color/whitecolortext"
            android:textSize="15sp" />
    </LinearLayout>

</ScrollView>



