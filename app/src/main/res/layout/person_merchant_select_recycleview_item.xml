<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginTop="7dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/person_merchant_select_itembackaround"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/person_merchant_select_recyclevireitem_img1"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:src="@drawable/person_merchant_selectimg1" />

        <TextView
            android:id="@+id/person_merchant_select_recyclevireitem_text1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:text="充值类交易明细"
            android:textColor="#3f3f3f" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="15dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="-40dp"
            android:src="@drawable/person_merchant_select_recycleviewitemjiantou" />

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/home_merchantselect_recycleviewitemendviewline" />
</LinearLayout>
