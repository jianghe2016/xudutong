<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <!--第一行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/trainresultitem1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="***"
            android:textColor="#2673d7" />

        <TextView
            android:id="@+id/trainresultitem2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="***"
            android:textColor="@color/blacktext" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:src="@drawable/trainresult" />
        </LinearLayout>

        <TextView
            android:id="@+id/trainresultitem3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="***"
            android:textColor="@color/blacktext" />
    </LinearLayout>
    <!--    第二行的箭头图片-->

    <!--第三行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <!--历时-->
        <TextView
            android:id="@+id/trainresultitem5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="***"
            android:textColor="@color/blacktext" />

        <TextView
            android:id="@+id/trainresultitem4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="***"
            android:textColor="@color/blacktext" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="一"
            android:textColor="@color/blacktext" />

        <TextView
            android:id="@+id/trainresultitem6"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:text="***"
            android:textColor="@color/blacktext" />
    </LinearLayout>
    <!--    第四行-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="23dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/trainresultitemshapelinear1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/trainresultitemnumber1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blacktext"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trainresultitem7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blacktext"

                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trainresultitemshapelinear2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/trainresultitemnumber2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blacktext"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trainresultitem8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blacktext"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/trainresultitemshapelinear3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/trainresultitemnumber3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blacktext"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trainresultitem9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blacktext"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/trainresultitemshapelinear4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/trainresultitemnumber4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blacktext"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/trainresultitem10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/blacktext"
                android:textSize="12sp" />

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/main_bianmin" />
</LinearLayout>
