<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_bianmin"
    android:orientation="vertical">

        <TextView
            android:id="@+id/weizhangtext1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="30dp"
            android:paddingRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="12sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hoem_cardgropu_button3itemimg1"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/time" />

            <TextView
                android:id="@+id/weizhangtext2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hoem_cardgropu_button3itemimg2"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:src="@drawable/map" />

            <TextView
                android:id="@+id/weizhangtext3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="8dp"
                android:textSize="12sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/weizhangtext4"
            android:layout_width="wrap_content"
            android:layout_height="15dp"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:textSize="12sp" />


</LinearLayout>
