<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/locallife_localrecycledetailsrecycleviewitemimg1"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </LinearLayout>

        <TextView
            android:gravity="center_vertical"
            android:paddingLeft="5dp"
            android:id="@+id/locallife_localrecycledetailsrecycleviewitemtext"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="10"
            android:textColor="@color/blacktext" />

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/locallife_localrecycledetailsrecycleviewitemimg2"
                android:layout_width="12dp"
                android:layout_height="20dp"
                android:src="@drawable/rightjiantou" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="13dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:background="@color/main_bianmin" />
</LinearLayout>
