<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headview"
        android:background="@color/locallife_headviewtext"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/littlegreeenbikerecordselectdateback"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/BACK_JIANTOU"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/home_weatherback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/whitecolortext"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/backlinearklayoutwithmarinleft"
            android:gravity="center"
            android:text="选择日期"
            android:textColor="@color/whitecolortext"
            android:textSize="@dimen/headviewtextsize" />

        <TextView
            android:id="@+id/littlegreeenbikerecordselectdatesuccess"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-90dp"
            android:gravity="center"
            android:text="完成"
            android:textColor="@color/whitecolortext"
            android:textSize="17sp" />
    </LinearLayout>

    <com.xdt.xudutong.datepick.DatePickerView
        android:id="@+id/mydate_pickerforlittle"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>