<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headview"
        android:background="@color/locallife_headviewtext">

        <LinearLayout
            android:id="@+id/person_eight_messageactivity_back"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/BACK_JIANTOU"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/home_weatherback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/whitecolortext"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/backlinearklayoutwithmarinleft"
            android:gravity="center"
            android:text="消息管理"
            android:textColor="@color/whitecolortext"
            android:textSize="@dimen/headviewtextsize" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitecolortext"
        android:orientation="horizontal"
        android:paddingBottom="10dp"
        android:paddingTop="15dp">

        <LinearLayout
            android:id="@+id/person_push_infomanageroneselectbutton1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/person_push_infomanageroneimg1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="订单信息" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/person_push_infomanageroneselectbutton2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <FrameLayout
                android:background="@color/whitecolortext"
                android:layout_gravity="center"
                android:layout_width="55dp"
                android:layout_height="55dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/person_push_infomanageroneimg3" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/person_push_infomanageroneselectbutton2text"
                    android:textSize="10sp"
                    android:textColor="@color/whitecolortext"
                    android:gravity="center"
                    android:layout_gravity="right|top"
                    android:background="@drawable/shape_edittext9_3"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />

            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="小绿骑行" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/person_push_infomanageroneselectbutton3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">
            <FrameLayout
                android:background="@color/whitecolortext"
                android:layout_gravity="center"
                android:layout_width="55dp"
                android:layout_height="55dp">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/person_push_infomanageroneimg3" />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/person_push_infomanageroneselectbutton3text"
                    android:textSize="10sp"
                    android:textColor="@color/whitecolortext"
                    android:gravity="center"
                    android:layout_gravity="right|top"
                    android:background="@drawable/shape_edittext9_3"
                    android:layout_width="17dp"
                    android:layout_height="17dp" />

            </FrameLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="实名认证" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/person_push_infomanageroneselectbutton4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:src="@drawable/person_push_infomanageroneimg4" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="智慧医疗" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/whitecolortext">
        <include
            android:id="@+id/emptystates_layout2"
            layout="@layout/searchemptylayout"
            android:visibility="gone" />
        <ImageView
            android:id="@+id/onlyProgress"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:background="@drawable/progressloading" />

        <com.jcodecraeer.xrecyclerview.XRecyclerView
            android:scrollbars="none"
            android:id="@+id/person_push_infomanageronerecycleview"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</LinearLayout>