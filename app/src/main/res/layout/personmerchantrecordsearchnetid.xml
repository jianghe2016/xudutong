<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitecolortext"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headview"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_merchantrecordseearchnextback"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/BACK_JIANTOU"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/personmerchantsearchnetiddetailsback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/blacktext"
                android:textSize="17sp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-75dp"
            android:gravity="center"
            android:text="选择交易网点"
            android:textColor="@color/blacktext"
            android:textSize="@dimen/headviewtextsize" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/personmerchantsearchnetiddetailsline1" />

    <LinearLayout
        android:id="@+id/home_merchantrecordseearchnextlinearlayoutone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="50dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="3dp"
            android:src="@drawable/personmerchantsearchnetiddetailsimg1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="7dp"
            android:text="许昌市"
            android:textColor="@color/blacktext"
            android:textSize="17sp" />

        <ImageView
            android:id="@+id/home_merchantrecordseearchnextimgtop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/personmerchantsearchnetiddetailsnext1" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_merchantrecordseearchnextrecycleviewone1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
         android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/home_merchantrecordseearchnextrecycleviewone2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       android:visibility="gone"/>

</LinearLayout>