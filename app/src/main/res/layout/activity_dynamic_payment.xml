<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:fitsSystemWindows="true"
              android:background="#2673D7">

    <include layout="@layout/title_bar_layout2"/>

    <LinearLayout
        android:background="@drawable/xiaolv_bg"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_width="match_parent"
        android:layout_height="365dp"
        android:orientation="vertical">

        <TextView
            android:gravity="center_horizontal"
            android:layout_marginTop="20dp"
            android:textColor="#bbbbbb"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="请将二维码靠近扫码器"/>


        <ImageView
            android:layout_marginTop="28dp"
            android:layout_gravity="center"
            android:id="@+id/iv_code"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="34dp"
            android:background="#e5e5e5"/>

        <RelativeLayout
            android:id="@+id/rel_select_way"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="42dp">

            <ImageView
                android:layout_toLeftOf="@+id/select_payment_way"
                android:layout_marginRight="10dp"
                android:id="@+id/iv_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/home_paycode_balance"
                android:layout_centerInParent="true"/>
            <TextView
                android:id="@+id/select_payment_way"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="许都通余额"/>

            <TextView
                android:background="@drawable/arrow_right_gray"
                android:layout_toRightOf="@+id/select_payment_way"
                android:layout_centerInParent="true"
                android:layout_width="8dp"
                android:layout_marginLeft="10dp"
                android:layout_height="13dp"/>
        </RelativeLayout>
        </LinearLayout>

        <TextView
            android:layout_marginTop="25dp"
            android:layout_gravity="center_horizontal"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:text="如付款失败，可尝试其他付款方式"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

</LinearLayout>

