<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/person_card_managerbackaround"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingLeft="10dp">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/table_xudutongpress" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:gravity="center"
                        android:text="许都通"
                        android:textColor="@color/whitecolortext"
                        android:textSize="17sp"
                        android:textStyle="normal" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="居民健康卡"
                        android:textColor="@color/whitecolortext"
                        android:textSize="12sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/personitenfourguashirecycleitem1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textColor="@color/whitecolortext"
                android:textSize="24sp"
                android:textStyle="normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/person_cardmanager_selectcancleguashiimg2"
            android:layout_width="@dimen/xdtcardlock1"
            android:layout_height="@dimen/xdtcardlock2"
            android:layout_gravity="end"
            android:layout_marginRight="@dimen/xdtcardlock2marright"
            android:layout_marginTop="@dimen/xdtcardlock2martop"
            android:src="@drawable/xdt_kaguashiimg2"
            android:visibility="gone" />
    </FrameLayout>

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/person_cardamanagerguashi_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-1dp"
        android:background="@drawable/shape_cardmanagerlinebackaround"
        android:orientation="vertical">

        <TextView
            android:id="@+id/person_cardamanager_guashidialogtext1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="#424242"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/person_cardamanager_guashidialogtext2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="#424242"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/person_cardamanager_guashidialogtext4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:textColor="#424242"
            android:textSize="15sp" />
    </LinearLayout>
</LinearLayout>
