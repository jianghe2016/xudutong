<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headview"
        android:background="@color/locallife_headviewtext">

        <LinearLayout
            android:id="@+id/person_itemtwo_twice_passwordback"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView

                style="@style/BACK_JIANTOU"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/home_weatherback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/whitecolortext"
                android:textSize="17sp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/backlinearklayoutwithmarinleft"
            android:gravity="center"
            android:text="修改密码"
            android:textColor="@color/whitecolortext"
            android:textSize="@dimen/headviewtextsize" />
    </LinearLayout>

    <TextView style="@style/EMPET_ITEM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="#ebebeb">

        <EditText
            android:maxLength="20"
            android:id="@+id/person_itemtwo_twice_passwordtext1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入旧密码"
            android:paddingLeft="20dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/person_twice_password_eyeselect1"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/person_itemtwo_twice_passwordimg1"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="30dp"
        android:background="#ebebeb">

        <EditText
            android:maxLength="20"
            android:password="true"
            android:id="@+id/person_itemtwo_twice_passwordtext2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请输入新密码"
            android:paddingLeft="20dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14sp" />

        <LinearLayout
            android:id="@+id/person_twice_password_eyeselect2"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/person_itemtwo_twice_passwordimg2"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:src="@drawable/person_centercloseeye" />
        </LinearLayout>


    </LinearLayout>


    <TextView style="@style/EMPET_ITEM" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:background="#ebebeb">

        <EditText
            android:maxLength="20"
            android:password="true"
            android:id="@+id/person_itemtwo_twice_passwordtext3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@null"
            android:hint="请确认新密码"
            android:paddingLeft="20dp"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14sp" />


        <LinearLayout
            android:id="@+id/person_twice_password_eyeselect3"
            android:layout_width="40dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/person_itemtwo_twice_passwordimg3"
                android:layout_width="20dp"
                android:layout_height="15dp"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="20dp"
                android:src="@drawable/person_centercloseeye" />
        </LinearLayout>

    </LinearLayout>

    <TextView
        style="@style/EMPET_ITEM"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:gravity="end"
        android:text="*密码为6~20位数字、字母组合"
        android:textColor="#535353"
        android:textSize="12sp" />

    <Button
        android:id="@+id/person_twice_password_submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#2673d7"
        android:text="确认修改"
        android:textColor="@color/whitecolortext" />
</LinearLayout>
