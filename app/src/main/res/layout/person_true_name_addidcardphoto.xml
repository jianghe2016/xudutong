<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whitecolortext"
    android:orientation="vertical"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/headview"
            android:background="@color/locallife_headviewtext">

            <LinearLayout
                android:id="@+id/person_true__nameaddcardphotoback"
                android:layout_width="70dp"
                android:layout_height="match_parent">

                <ImageView

                    style="@style/BACK_JIANTOU"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/home_weatherback" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="返回"
                    android:textColor="@color/whitecolortext"
                    android:textSize="17sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/backlinearklayoutwithmarinleft"
                android:gravity="center"
                android:text="实名认证"
                android:textColor="@color/whitecolortext"
                android:textSize="@dimen/headviewtextsize" />
        </LinearLayout>

        <TextView
            style="@style/EMPET_ITEM"
            android:background="#efeff4" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#efeff4">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.8dp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="#cdcdcd" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/person_center_tuername_imgunselect"
                        android:gravity="center"
                        android:text="1"
                        android:textColor="@color/whitecolortext"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/person_center_tuername_imgselect"
                        android:gravity="center"
                        android:text="2"
                        android:textColor="@color/whitecolortext"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/person_center_tuername_imgunselect"
                        android:gravity="center"
                        android:text="3"
                        android:textColor="@color/whitecolortext"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center">

                    <TextView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/person_center_tuername_imgunselect"
                        android:gravity="center"
                        android:paddingRight="2dp"
                        android:text="4"
                        android:textColor="@color/whitecolortext"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="#efeff4"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="基本信息"
                android:textColor="#555555"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="身份证明"
                android:textColor="#555555"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="资料审核"
                android:textColor="#555555"
                android:textSize="12sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="认证结果"
                android:textColor="#555555"
                android:textSize="12sp" />


        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/cardview1"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:gravity="center"
                android:text="上传身份证正面照片"
                android:textColor="#333333"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/backaroundadd1"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/person_turename_tureimg"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/add1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/person_turename_camera" />


            </LinearLayout>


            <ImageView
                android:id="@+id/add1getimg"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY" />
        </FrameLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.6dp"
            android:background="#cdcdcd" />

        <TextView style="@style/EMPET_ITEM" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <TextView
                android:id="@+id/cardview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="上传身份证背面照片"
                android:textColor="#333333"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/backaroundadd2"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:background="@drawable/person_turename_falseimg"
                android:gravity="center"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/add2"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/person_turename_camera" />

            </LinearLayout>

            <ImageView
                android:id="@+id/add2getimg"
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY" />

            <ProgressBar
                android:id="@+id/person_truename_addcardphotoprogress"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:visibility="invisible" />
        </FrameLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp" />

        <TextView
            android:id="@+id/person_true_next"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#2673d7"
            android:gravity="center"
            android:text="下一步"
            android:textColor="@color/whitecolortext"
            android:textSize="17sp" />
    </LinearLayout>

</ScrollView>
