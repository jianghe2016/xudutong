<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="bottom"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="38dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/chat_speechstatus_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dpx_020"
            android:paddingRight="@dimen/dpx_020"
            android:src="@drawable/chatinput_status_image" >
        </ImageView>

        <TextView
            android:id="@+id/chat_speechstatus_time"
            style="@style/text"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:text="0:03" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/chat_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="bottom"
            android:orientation="horizontal" >

            <LinearLayout
                android:id="@+id/chat_container_text"
                android:layout_width="0dip"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/chat_contentET"
                    style="@style/edtStyle"
                    android:visibility="gone"
                    android:layout_width="0dip"
                    android:layout_height="30dp"
                    android:layout_marginBottom="@dimen/dpx_010"
                    android:layout_marginLeft="@dimen/dpx_030"
                    android:layout_marginTop="@dimen/dpx_010"
                    android:layout_weight="1"
                    android:background="@drawable/textfield_default"
                    android:maxHeight="90dp"
                    android:minHeight="28dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp" />
                <TextView
                    android:id="@+id/txt"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="100dp"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:text="请长按右侧录音按钮"/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_right_gray"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="50dp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chat_container_speech"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/chat_sendspeech_textdel"
                    style="@style/textLight"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:text="滑动取消"
                    android:visibility="gone" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/chatinput_slip_click" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/chat_sendimage"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dpx_020"
                    android:paddingRight="@dimen/dpx_020"
                    android:visibility="gone"
                    android:src="@mipmap/chatinput_image" />

                <ImageView
                    android:id="@+id/chat_divisionImg"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:src="@mipmap/chatinput_division" />

                <ImageView
                    android:id="@+id/chat_sendspeech"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingLeft="@dimen/dpx_020"
                    android:paddingRight="@dimen/dpx_020"
                    android:src="@mipmap/chatinput_speech" >
                </ImageView>

                <TextView
                    android:id="@+id/chat_sendtext"
                    style="@style/textFocus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dpx_020"
                    android:layout_marginRight="@dimen/dpx_020"
                    android:paddingBottom="3dp"
                    android:paddingLeft="@dimen/dpx_012"
                    android:paddingRight="@dimen/dpx_012"
                    android:paddingTop="3dp"
                    android:text="发送" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>