<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/alllittlegreenrecordlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headview"
        android:background="@color/locallife_headviewtext"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/littlegreembikerecordback"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/BACK_JIANTOU"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@drawable/home_weatherback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/whitecolortext"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/backlinearklayoutwithmarinleft"
            android:gravity="center"
            android:text="骑行记录"
            android:textColor="@color/whitecolortext"
            android:textSize="@dimen/headviewtextsize" />

        <ImageView
            android:id="@+id/littlegreembikerecordselectdate"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="-50dp"
            android:src="@drawable/littlegreenbiketakerecordimgbutton1" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/littlegreenbiketakerecordtablelayout"
        style="@style/myBase.Widget.Design.TabLayout"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/person_eight_message_onefragment_tablayoutbackaround"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/whitecolortext"
        app:tabTextColor="#4f607f" />

    <android.support.v4.view.ViewPager
        android:id="@+id/littlegreenbiketakerecordviewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="15dp" />
</LinearLayout>