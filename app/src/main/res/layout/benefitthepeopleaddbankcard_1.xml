<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f5f5"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headview"
        android:background="@color/whitecolortext">

        <LinearLayout
            android:id="@+id/benefitthepeopleaddbankcard_1back"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/BACK_JIANTOU"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/personmerchantsearchnetiddetailsback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/whitetopgraytext"
                android:textSize="17sp" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="-70dp"
            android:gravity="center"
            android:text="添加银行卡"
            android:textColor="@color/whitetopgraytext"
            android:textSize="@dimen/headviewtextsize" />


    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#f6f5f5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitecolortext"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="姓名"
            android:textColor="@color/lulugraytextcolor"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/benefitthepeopleaddbankcard_1edutext1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入本人真实姓名"
            android:textColor="@color/lulugraytextcolor"
            android:textColorHint="@color/luluhinttextcolor"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cdcdcd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitecolortext"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="卡号"
            android:textColor="@color/lulugraytextcolor"
            android:textSize="15sp" />

        <EditText
            android:inputType="number"
            android:id="@+id/benefitthepeopleaddbankcard_1edutext2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入银行卡号"
            android:textColor="@color/lulugraytextcolor"
            android:textColorHint="@color/luluhinttextcolor"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cdcdcd" />

    <LinearLayout
        android:id="@+id/benefitthepeopleaddbankcard_1selectbank0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitecolortext"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="开户行"
            android:textColor="@color/lulugraytextcolor"
            android:textSize="15sp" />

        <RelativeLayout
            android:id="@+id/benefitthepeopleaddbankcard_1selectbank"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical|end"
            android:paddingRight="10dp">

            <TextView
                android:id="@+id/benefitthepeopleaddbankcard_1eduittext3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_vertical"
                android:text="请选择"
                android:textColor="@color/luluhinttextcolor"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/benefitthepeopleaddbankcard_1eduittext3"
                android:src="@drawable/person_center_settingnext" />
        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cdcdcd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitecolortext"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="手机号"
            android:textColor="@color/lulugraytextcolor"
            android:textSize="15sp" />

        <EditText
            android:inputType="number"
            android:id="@+id/benefitthepeopleaddbankcard_1edutext4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:background="@null"
            android:hint="请输入银行预留手机号"
            android:textColor="@color/lulugraytextcolor"
            android:textColorHint="@color/luluhinttextcolor"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#cdcdcd" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitecolortext"
        android:orientation="horizontal"
        android:paddingBottom="15dp"
        android:paddingTop="15dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:text="短信验证码"
            android:textColor="@color/lulugraytextcolor"
            android:textSize="15sp" />

        <EditText
            android:inputType="number"
            android:id="@+id/benefitthepeopleaddbankcard_1edutext5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2.6"
            android:background="@null"
            android:hint="请输入短信验证码"
            android:textColor="@color/lulugraytextcolor"
            android:textColorHint="@color/luluhinttextcolor"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/benefitthepeopleaddbankcard_1sendmessage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="15dp"
            android:layout_weight="2"
            android:background="@drawable/shape_edittext3"
            android:gravity="center"
            android:text="获取验证码"
            android:textColor="#c7000a" />
    </LinearLayout>


    <Button
        android:id="@+id/benefitthepeopleaddbankcard_1submit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_edittext2"
        android:gravity="center"
        android:text="确认"
        android:textColor="@color/whitecolortext"
        android:textSize="15sp" />
</LinearLayout>