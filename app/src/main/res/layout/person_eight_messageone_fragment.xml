<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#efeff4"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/person_eight_message_onefragment_tablelayout"
        style="@style/myBase.Widget.Design.TabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/person_eight_message_onefragment_tablayoutbackaround"
        app:tabIndicatorColor="@android:color/transparent"
        app:tabSelectedTextColor="@color/whitecolortext"
        app:tabTextColor="#4f607f" />

    <android.support.v4.view.ViewPager
        android:id="@+id/person_eight_message_onefragment_viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>