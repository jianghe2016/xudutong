<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/updtaeversiondialog"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:gravity="center_horizontal"
                android:text="发现新版本！"
                android:textColor="@color/blacktext"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/person_versionname_update_dialogtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_horizontal"
                android:textColor="@color/blacktext"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/person_versionname_update_dialogsubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_versondpdate_dialog"
                android:gravity="center_horizontal"
                android:text="立即更新"
                android:textColor="@color/whitecolortext" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/person_versionname_update_dialogcancle"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="end">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="50dp"
                android:src="@drawable/person_versonupdatecancle" />
        </LinearLayout>
    </FrameLayout>


</LinearLayout>