<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitecolortext"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/home_cardgroup_button4nextdetailsrecycleviewitem1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textColor="@color/blackline"
        android:textStyle="bold" />

    <TextView
        android:paddingRight="15dp"
        android:paddingLeft="15dp"
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/main_bianmin" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:id="@+id/home_cardgroup_button4nextdetailsrecycleviewitem2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="15dp"
        android:paddingRight="15dp">

        <TextView
            android:id="@+id/home_cardgroup_button4nextdetailsrecycleviewitem3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="***" />

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/home_cardgroup_button4nextdetailsrecycleviewitem4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="***" />

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/home_cardgroup_button4nextdetailsrecycleviewitem5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="***" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@color/main_bianmin" />
</LinearLayout>