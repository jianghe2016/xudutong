<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitecolortext"
    android:orientation="horizontal"
    android:paddingBottom="15dp"
    android:paddingTop="15dp">
    <!--第一列-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical">

        <TextView
            android:id="@+id/home2_merchantrecordseearchleft1"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@drawable/home_merchantrecordseearchrecycleitemimg1"
            android:gravity="center"
            android:text="¥   50.00元"
            android:textColor="@color/whitecolortext"
            android:textSize="17sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="50dp"
            android:src="@drawable/home_merchantrecordseearchrecycleitembackaround" />
    </LinearLayout>

    <!--第二列-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:orientation="vertical"
        android:paddingLeft="25dp">

        <TextView
            android:id="@+id/home2_merchantrecordseearchright1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:text="网点编号：***"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home2_merchantrecordseearchright2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="网点名称：***"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home2_merchantrecordseearchright3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="交易科目：***"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home2_merchantrecordseearchright4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="交易描述：***"
            android:textColor="#333333"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/home2_merchantrecordseearchright5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_vertical"
            android:text="交易次数：***"
            android:textColor="#333333"
            android:textSize="14sp" />
    </LinearLayout>


</LinearLayout>