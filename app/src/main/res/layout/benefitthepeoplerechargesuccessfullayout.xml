<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f6f5f5"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/headview"
        android:background="@color/whitecolortext">

        <LinearLayout
            android:id="@+id/benefitthepeoplerechargesuccessfullayoutback"
            android:layout_width="70dp"
            android:layout_height="match_parent">

            <ImageView
                style="@style/BACK_JIANTOU"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="15dp"
                android:src="@drawable/personmerchantsearchnetiddetailsback" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="返回"
                android:textColor="@color/whitetopgraytext"
                android:textSize="17sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"

            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:src="@drawable/benefitthepeopleopenanaccounttopimg"
                />
            <TextView
                android:layout_marginLeft="5dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="充值成功"
                android:textColor="@color/whitetopgraytext"
                android:textSize="@dimen/headviewtextsize" />
        </LinearLayout>


        <TextView
            android:id="@+id/benefitthepeoplerechargesuccessfullayoutmakesure"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="完成"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:textColor="#C8000A"
            android:textSize="@dimen/headviewtextsize" />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#e5e5e5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/whitecolortext"
        android:orientation="vertical">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:src="@drawable/benefitthepeoplerechargesuccessfullayoutimg1" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:text="充值成功"
            android:textColor="#1d1d1d"
            android:textSize="19sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <TextView
                android:id="@+id/benefitthepeoplerechargesuccessfullayouttext2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center_horizontal"
                android:text="1.00"
                android:textColor="#1d1d1d"
                android:textSize="40sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/benefitthepeoplerechargesuccessfullayouttext1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/benefitthepeoplerechargesuccessfullayouttext2"
                android:layout_marginBottom="5dp"
                android:layout_toLeftOf="@id/benefitthepeoplerechargesuccessfullayouttext2"
                android:text="¥"
                android:textColor="#1d1d1d"
                android:textSize="19sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="付款方式" />

            <TextView
                android:paddingRight="30dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical|end"
                android:text="工商银行储蓄卡" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>