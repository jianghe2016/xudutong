<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/whitecolortext"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/home_phone_money_buttom_popwindowimg1"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingTop="15dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/home_phone_money_buttom_popwindowimg1" />
        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingBottom="5dp"
            android:paddingLeft="-50dp"
            android:paddingTop="15dp"
            android:text="确认付款"
            android:textColor="@color/blacktext"
            android:textSize="17sp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:background="#cfcccc" />

    <TextView
        android:id="@+id/home_phone_money_buttom_popwindowpayformoney"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="￥10.00"
        android:textColor="@color/blacktext"
        android:textSize="35sp" />

    <include
        layout="@layout/home_phone_money_buttom_popwindowrecycleviewitem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/home_phone_money_buttom_popwindowsubmitbutton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:layout_gravity="bottom"
        android:background="@drawable/shape_phonemoneybuttonselect1"
        android:text="立即付款"
        android:textColor="@color/whitecolortext"
        android:textSize="18sp" />
</LinearLayout>